# ---- GENERAL SETTINGS ----
PROJECT_NAME=private-ai-stack
COMPOSE_PROJECT_NAME=${PROJECT_NAME}
TZ=UTC

# ---- NETWORK ----
# Local static subnet for service communication
SUBNET=172.18.0.0/16
NETWORK_NAME=private_ai_network

# ---- SERVICES IP ADDRESSES ----
POSTGRES_IP=172.18.0.5
N8N_IP=172.18.0.6
OPENWEBUI_IP=172.18.0.7
LLAMA_IP=172.18.0.8
TRAEFIK_IP=172.18.0.9
REDIS_IP=172.18.0.10

# ---- DOMAINS & ROUTING ----
DOMAIN=localhost
EMAIL=admin@localhost
HTTP_PORT=80
HTTPS_PORT=443

# ---- DATABASE ----
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=private_ai
POSTGRES_PORT=5432

# ---- N8N ----
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=password
N8N_ENCRYPTION_KEY=your_n8n_encryption_key_here

# ---- OPENWEBUI ----
OPENWEBUI_ADMIN_EMAIL=admin@localhost
OPENWEBUI_ADMIN_PASSWORD=admin
OPENWEBUI_PORT=3000

# ---- LLAMA.CPP SERVER ----
LLAMA_MODEL_PATH=/models/qwen-3-4b-2507.gguf
LLAMA_CONTEXT_SIZE=40960
LLAMA_TEMP=0.6
LLAMA_TOP_K=20
LLAMA_TOP_P=0.95
LLAMA_ACCEL=cpu        # options: cpu, cuda, rocm, metal

# ---- REDIS ----
REDIS_PORT=6379

# ---- TRAEFIK ----
TRAEFIK_DASHBOARD_USER=admin
TRAEFIK_DASHBOARD_PASSWORD=password

# ---- VOLUME PATHS ----
DATA_PATH=./data
MODELS_PATH=./models
LOGS_PATH=./logs
